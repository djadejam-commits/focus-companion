{
  "expo": {
    "name": "Focus Companion",
    "slug": "focus-companion",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#6366F1"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.focuscompanion.app",
      "infoPlist": {
        "NSMotionUsageDescription": "This app uses motion sensors to detect when you pick up your phone during focus sessions, helping you stay accountable to your study goals."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6366F1"
      },
      "package": "com.focuscompanion.app",
      "permissions": [
        "android.permission.VIBRATE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    },
    "plugins": [
      [
        "expo-sensors",
        {
          "motionPermission": "Allow Focus Companion to use motion sensors to detect phone pickups during study sessions."
        }
      ]
    ]
  }
}
